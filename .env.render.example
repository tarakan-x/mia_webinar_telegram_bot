# Render.com Environment Variables Template
# Copy these to your Render.com service's Environment Variables section

# Required
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Admin IDs (comma-separated)
ADMIN_IDS=123456789,987654321

# Webinar Configuration
WEBINAR_DAY=Tuesday
WEBINAR_TIME=15:00
WEBINAR_TIMEZONE=Europe/Bucharest

# Google Sheets (Optional)
GOOGLE_SHEETS_ENABLED=true
GOOGLE_SHEETS_SPREADSHEET_ID=your_spreadsheet_id
GOOGLE_SHEETS_WORKSHEET_NAME=participants
GOOGLE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"..."}

# Reminder Schedule
REMINDER_DAY_DAY=Tuesday
REMINDER_DAY_TIME=09:00
